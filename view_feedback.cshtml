@page
@model WebApplication1.Pages.ViewFeedbackModel
@{
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feedback Entries</title>
    <style>
        /* Style for each feedback entry */
        .feedback-entry {
            width: 200px;
            height: 150px;
            border: 1px solid #ccc;
            margin: 10px;
            padding: 10px;
            box-sizing: border-box;
            float: left;
        }
        /* Clear floating elements */
        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Feedback Entries</h1>
        <div class="clearfix">
            @foreach (var entry in Model.RecentFeedbackEntries.Take(20).OrderByDescending(f => f.FeedbackDate))
            {
                <div class="feedback-entry">
                    <h2>Feedback ID: @entry.FeedbackId</h2>
                    <p><strong>Student ID:</strong> @entry.StudentId</p>
                    <p><strong>Satisfaction:</strong> @entry.Satisfaction</p>
                    <p><strong>Preference:</strong> @entry.Preference</p>
                    <p><strong>Skill Development:</strong> @entry.SkillDevelopment</p>
                    <p><strong>Communication Effectiveness:</strong> @entry.CommunicationEffectiveness</p>
                    <p><strong>Professional Development:</strong> @entry.ProfessionalDevelopment</p>
                    <p><strong>Comments:</strong> @entry.Comments</p>
                    <p><strong>Feedback Date:</strong> @entry.FeedbackDate</p>
                </div>
            }
        </div>
    </div>
</body>
</html>
